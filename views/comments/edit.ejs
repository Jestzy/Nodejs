<% include ../partials/header %>
<div class="container">
    <h1 style="text-align: center;margin: 20px auto;">Edit Comment </h1>
    <div style="width:30%; margin: 50px auto;">
        <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" name="comment[text]" type="text" value="<%= comment.text%>">
            </div>
            <button class="btn btn-lg btn-primary btn-block">Submit</button>
        </form>
        <div style="margin-top: 20px;">
            <a href="/campgrounds" >Go back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>