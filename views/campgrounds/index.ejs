<% include ../partials/header %>


<div class="container text-center">
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
        <h1 class="display-4">Welcome to YelpCamp</h1>
        <p class="lead">View our hand-picked campgrounds from all over the world.</p>
        <p>
            <a href="/campgrounds/new" class="btn btn-primary btn-lg">Add New Campground</a>
        </p>
        </div>
    </div>
    <div class="row text-center" >
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6"  style="display: flex; flex-wrap: wrap; margin-top: 2rem;">
                <div class="card" style="width: 18rem;">
                    <img src="<%= campground.image %>" class="card-img-top" alt="" width="300" height="150">
                    <div class="card-body">
                        <p class="card-text"><%= campground.name %><p>
                            <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<% include ../partials/footer %>