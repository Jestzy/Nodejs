<% include ../partials/header %>
<div class="container">
    <h1 style="text-align: center;margin: 20px auto;">Edit <%= campground.name %></h1>
    <div style="width:30%; margin: 50px auto;">
        <form action="/campgrounds/<%= campground._id %>/?_method=PUT " method="POST">
            <div class="form-group">
                <input class="form-control" name="campground[name]" type="text" value="<%= campground.name %>">
            </div>
            <div class="form-group">
                <input class="form-control" name="campground[image]" type="text" value="<%= campground.image %>">
            </div>
            <div class="form-group">
                <input class="form-control" name="campground[description]" type="text" value="<%= campground.description %>">
            </div>
            <button class="btn btn-lg btn-primary btn-block">Submit</button>
        </form>
        <div style="margin-top: 20px;">
            <a href="/campgrounds" >Go back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>